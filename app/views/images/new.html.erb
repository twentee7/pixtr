<h1>New Image</h1>
<%= form_for([@gallery, @image]) do |form| %>
<div>
	<%= form.label :name %>
	<%= form.text_field :name %>
</div>
<div>
	<%= form.label :description %>
	<%= form.text_area :description %>
</div>
<div>
	<%= form.label :link %>
	<%= form.text_field :url %>
</div>
<%= form.submit "Create" %>
<% end %>