<h1><%= @group.name %></h1>
<p><%= @group.description %></p>


<nav>
	<ul> 
		<% if current_user.member?(@group) %>
		<li><%= link_to "Leave Group", group_path(@group), method: :delete, data: {confirm: "Are you sure?" } %></li>
		<% else %>
		<li><%= link_to "Join", group_path(@group), method: :post %></li>
		<% end %>
	</ul>
</nav>

<ul>
	<% @group.users.each do |user| %>
	<li><%= link_to user.email, user %></li>
	<% end %>
</ul>